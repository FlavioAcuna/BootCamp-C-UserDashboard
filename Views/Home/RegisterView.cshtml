@model User

@await Html.PartialAsync("Partials/_Navbar1")
<div class="container">
    <main role="main" class="pb-3">
        <div class="container">
            <div class="row">
                <h2>Register</h2>
            </div>
            <div class="row">
                <form asp-action="RegisterUser" asp-controller="Home" method="post">
                    <div class="row">
                        <label asp-for="Email">Email Address:</label>
                    </div>
                    <div class="row">
                        <input asp-for="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="row">
                        <label asp-for="FirstName">First Name:</label>
                    </div>
                    <div class="row">
                        <input asp-for="FirstName">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div class="row">
                        <label asp-for="LastName">Last Name:</label>
                    </div>
                    <div class="row">
                        <input asp-for="LastName">
                        <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="row">
                        <label asp-for="Password">Password:</label>
                    </div>
                    <div class="row">
                        <input asp-for="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="row">
                        <label asp-for="PasswordConfirm">Password Confirmation</label>
                    </div>
                    <div class="row">
                        <input asp-for="PasswordConfirm">
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <button class="my-3 btn btn-success">Register</button>
                </form>
                <a asp-action="SigninView" asp-controller="Home" asp-area="">Already have an account? Login.</a>
            </div>
        </div>
    </main>
</div>